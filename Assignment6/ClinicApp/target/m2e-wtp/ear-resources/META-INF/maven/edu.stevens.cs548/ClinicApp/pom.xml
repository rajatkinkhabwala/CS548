<!-- 			<groupId>edu.stevens.cs548</groupId> -->
<!-- 			<artifactId>ClinicWebApp</artifactId> -->
<!-- 			<type>war</type> -->
<!-- 		</dependency> -->
	</dependencies>
</project>
